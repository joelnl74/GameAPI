@model IEnumerable<Tools.Models.Character.BaseCharacter>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Content character list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="ContentCharacter" asp-action="CreateContentCharacter" class="btn btn-outline-primary">Create</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    TypeId
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.typeId</td>
                    <td>@item.name</td>
                    <td>
                        <a asp-controller="ContentCharacter" asp-action="UpdateContentCharacter" class="btn btn-outline-primary">Update</a>
                        <a asp-controller="ContentCharacter" asp-action="DeleteContentCharacter" class="btn btn-outline-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>